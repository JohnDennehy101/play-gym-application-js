{{> trainerMenu id='trainerMenu' }}

<section class="ui raised segment">
    <div class="ui relaxed divided list">
   
{{#each members}}
        <div class="item">

            <i class="large github middle aligned icon"></i>

            <div class="middle aligned content">
                <div class="header">
                    <a href="/member/{{id}}">{{makeFirstLetterOfNameUpperCase name}}</a>
                    <a href="/trainerDashboard/{{id}}">
                        <i class="fitted trash alternate icon" style="color: red; padding-left: 5px;"></i>
                    </a>
                </div>

               <div class="description"> {{totalAssessments}} {{setAssessmentText totalAssessments}}</div>
              
            </div>


        </div>
{{/each}}
   


</section>
